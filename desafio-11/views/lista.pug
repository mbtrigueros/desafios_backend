h2 Lista de productos

  #noProductos

    if state 
      h3=msg
  
    else

                    table
                            thead
                                tr 
                                    th(scope="col") #id
                                    th(scope="col") Nombre
                                    th(scope="col") Precio
                                    th(scope="col") Imagen
                            tbody
                                each producto in listaProductos
                                    tr
                                        td=producto.id
                                        td=producto.title
                                        td=producto.price
                                        td
                                            img(src="" alt="Imagen" srcset=producto.thumbnail)