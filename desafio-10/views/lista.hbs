 <h2>Lista de productos</h2>

      {{#if noProductos.state}}

        <h3>{{noProductos.msg}}</h3>

      {{else}}
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#id</th>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Imagen</th>
            </tr>
          </thead>

          <tbody>
            {{#each listaProductos}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img src="" alt="Imagen de {{this.title}}" srcset="{{this.thumbnail}}"></td>
              </tr>
            {{/each}}

          </tbody>
        </table>
      {{/if}}